{% extends 'base.html.twig' %}

{% block title %}Synaps System | Informations {{ site.name }}{% endblock %}

{% if profil == 'commercial' %}
    {% set profilPath = path('commercial.edit', {id: user.id}) %}
{% elseif profil == 'contact' %}
    {% set profilPath = path('contact.profil', {id: user.id}) %}
{% endif %}

{% block sidebar %}
    {% if profil == 'contact' %}
        {% include "partials/_sidebar_contact.html.twig" %}
    {% else %}
        {% include "partials/_sidebar.html.twig" %}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="card mb-4" style="width: 800px;">
        <div class="card-header">
            <i class="fas fa-store me-1"></i>
            {{ site.name }}
        </div>
        <div class="card-body">
            <div class ="d-flex justify-content-between align-items-center">
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic outlined example">
                    <button type="button" class="btn btn-outline-secondary"><a href="{{ path('csv.site', {id: site.id}) }}">CSV</a></button>
                    <button type="button" class="btn btn-outline-secondary"><a href="{{ path('pdf.site', {id: site.id}) }}">PDF</a></button>
                </div>
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic outlined example">
                    <button type="button" class="btn btn-outline-secondary"><a href="{{ path('entreprise.edit', {id: site.entreprise.id}) }}">Entreprise</a></button>
                    <button type="button" class="btn btn-outline-secondary"><a href="{{ path('site.contacts', {id: site.id}) }}">Contacts</a></button>
                </div>
            </div>
            {{ form_start(form) }}
                <div class="row align-items-center">
                    <div class="col-3 justify-content-end">
                        {{ form_label(form.name) }}
                    </div>
                    <div class="col-9 align-items-center d-flex">
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        {{ form_label(form.address) }}
                    </div>
                    <div class="col-9 align-items-center d-flex">
                        {{ form_widget(form.address) }}
                        {{ form_errors(form.address) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        {{ form_label(form.address2) }}
                    </div>
                    <div class="col-9 align-items-center d-flex">
                        {{ form_widget(form.address2) }}
                        {{ form_errors(form.address2) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        {{ form_label(form.postalcode) }}
                    </div>
                    <div class="col align-items-center d-flex">
                        {{ form_widget(form.postalcode) }}
                        {{ form_errors(form.postalcode) }}
                    </div>
                    <div class="col-2">
                        {{ form_label(form.city) }}
                    </div>
                    <div class="col align-items-center d-flex">
                        {{ form_widget(form.city) }}
                        {{ form_errors(form.city) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        {{ form_label(form.country) }}
                    </div>
                    <div class="col-9 align-items-center d-flex">
                        {{ form_widget(form.country) }}
                        {{ form_errors(form.country) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        {{ form_label(form.tel) }}
                    </div>
                    <div class="col align-items-center d-flex">
                        {{ form_widget(form.tel) }}
                        {{ form_errors(form.tel) }}
                    </div>
                    <div class="col-2">
                        {{ form_label(form.tel2) }}
                    </div>
                    <div class="col align-items-center d-flex">
                        {{ form_widget(form.tel2) }}
                        {{ form_errors(form.tel2) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        {{ form_label(form.fax) }}
                    </div>
                    <div class="col align-items-center d-flex">
                        {{ form_widget(form.fax) }}
                        {{ form_errors(form.fax) }}
                    </div>
                    <div class="col-2">
                        {{ form_label(form.email) }}
                    </div>
                    <div class="col align-items-center d-flex">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        {{ form_label(form.entreprise) }}
                    </div>
                    <div class="col-9 align-items-center d-flex">
                        {{ form_widget(form.entreprise) }}
                        {{ form_errors(form.entreprise) }}
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-3">
                        {{ form_widget(form.submit) }}
                    </div>
                    <div class="col-3">
                        <a href="{{ path('site.delete', { id: site.id}) }}"><button type="button" class="btn btn-secondary">Supprimer</button></a>
                    </div>
                </div>
            {{ form_end(form)}}
        </div>
    </div>
{% endblock %}
